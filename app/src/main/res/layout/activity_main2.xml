<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.feher.dogamenu.Main2Activity">

    <Button
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Information"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="140dp" />

    <Button
        android:id="@+id/nextactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/namechange"
        android:layout_alignEnd="@+id/information"
        android:layout_alignRight="@+id/information"
        android:layout_marginBottom="12dp"
        android:text="Next activity"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="202dp" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/information"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Exit"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="268dp" />

    <Button
        android:id="@+id/namechange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/information"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="Name change"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="342dp" />

    <TextView
        android:id="@+id/neved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nextactivity"
        android:layout_alignLeft="@+id/exit"
        android:layout_alignStart="@+id/exit"
        android:layout_marginBottom="33dp"
        android:text="neved"
        android:textSize="30sp" />
</RelativeLayout>
